  <div class="container">
    <h1>Événements</h1>
    <div class="d-flex justify-content-center">
      <ul class="list-inline">
        <li class="list-inline-item"><%= link_to 'Tous', events_path %></li>
        <% Event.categories.each do |key, value| %>
          <li class="list-inline-item">
            <%= link_to t("enums.event.category.#{key}"), category_of_events_path(category: key) %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="d-flex justify-content-center mb-4">
      <%= link_to '+ Créer un évènement', new_event_path, class: 'btn btn-primary' %>
    </div>

    <div  class="alert alert-danger text-center" role="alert">
      <h4> En raison de l'actualité, il se peut que certains événements soient perturbés. <br> Contactez l'organisateur pour en savoir plus.</h4>
      <a href="https://www.gouvernement.fr/"> Consultez les dernières informations sur l’épidémie de Covid-19 en France</a>
    </div>
    <% if @future_events.any? %>
      <h2 class="mt-5">Événements à venir</h2>

      <div class="row">
        <% @future_events.each do |event| %>
          <%= render event %>
        <% end %>
      </div>
    <% end %>
    <h2 class="mt-5">Événements passés</h2>
    <div class="row">
      <% @past_events.each do |event| %>
        <%= render event %>
      <% end %>
    </div>
  </div>
</div>
