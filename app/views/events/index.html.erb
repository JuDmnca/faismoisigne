  <div class="container">
    <h1>Evènements</h1>
    <% if @future_events.any? %>
      <h2 class="mt-5">Événements à venir</h2>
      <div class="row">
        <% @future_events.sort_by{ |t| t.date }.reverse.each do |event| %>
          <%= render event %>
        <% end %>
      </div>
    <% end %>
    <h2 class="mt-5">Événements passés</h2>
    <div class="row">
      <% @past_events.each do |event| %>
        <%= render event %>
      <% end %>
    </div>
  </div>
</div>
