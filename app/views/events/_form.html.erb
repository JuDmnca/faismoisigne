<!-- CREATION D'EVENEMENTS -->
     
      <div class="add_event"> 
   
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
    <%= form.label :nom %>
    <%= form.text_field :nom, :class => "form-control", :placeholder => "Nom" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, :class => "form-control", :placeholder => "Description de votre évènement, nombre de places, interprète présent..." %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, :class => "form-control", :id => 'datetimepicker4', :placeholder => "Date" %>
  </div>

  <div class="form-group">
    <%= form.label :heure %>
    <%= form.time_select :heure, :class => "form-control", :placeholder => "Heure" %>
  </div>

  <div class="form-group">
    <%= form.label :lieu %>
    <%= form.text_field :lieu, :class => "form-control", :placeholder => "Lieu" %>
  </div>

  <div class="form-row"> 
  <div class="form-group col-md-2">
    <%= form.label :numéro %>
    <%= form.text_field :num_rue, :class => "form-control", :placeholder => "N°" %>
  </div>

  <div class="form-group col-md-10">
    <%= form.label :rue %>
    <%= form.text_field :rue, :class => "form-control", :placeholder => "Rue" %>
  </div>
</div>


<div class="form-row">
  <div class="form-group col-md-3">
    <%= form.label :code_postal %>
    <%= form.text_field :code_postal, :class => "form-control", :placeholder => "Code postal" %>
  </div>

  <div class="form-group col-md-9">
    <%= form.label :ville %>
    <%= form.text_field :ville, :class => "form-control", :placeholder => "Ville" %>
  </div>
</div>

  <div class="button-cards ">
    <%= form.submit :Créer, :class => "btn btn-outline-danger"%>
    <%= link_to 'Retour', events_path, :class => "btn btn-outline-secondary"%>
  </div>
  </form>
<% end %>
</div>